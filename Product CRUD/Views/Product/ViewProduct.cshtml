@{
}
@using Product_CRUD.DB
@model Product
<div class="container mt-5 col-md-4">
    <h2>Update Product</h2>
    <form asp-action="UpdateProduct" asp-route-id="@Model.Id" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Product Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CostPrice" class="control-label">Cost Price</label>
            <input asp-for="CostPrice" class="form-control" required />
            <span asp-validation-for="CostPrice" class="text-danger"></span>
        </div>

       
        <div class="form-group">
            <label asp-for="Qty" class="control-label">Quantity</label>
            <input asp-for="Qty" class="form-control" required />
            <span asp-validation-for="Qty" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>

