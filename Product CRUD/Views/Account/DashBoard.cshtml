@{
}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accesor
<div class="container mt-5">
    <h2>User Dashboard</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Welcome to Product Manement</h5>
                    <p class="card-text">
                         @if (accesor.HttpContext.Session.GetString("UserEmail") != null)
    {
                            <strong>Email:</strong> @accesor.HttpContext.Session.GetString("UserEmail").ToString() <br>
    }else{

                        <strong class="text-danger">You are not logged in</strong> 
    }
                        
                    </p>
                    
                </div>
            </div>
        </div>
    </div>
</div>

